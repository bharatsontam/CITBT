@model IEnumerable<CITBT.Models.DbModels.UserMovieCancellationRequests>

@{
    ViewBag.Title = "Index";
}

<h2>Movie Cancellations</h2>

<table class="table table-bordered">
    <tr>
        <th>
            Movie Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsRefunded)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.MovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRefunded)
            </td>
            <td>
                <a href="@Url.Action("Approve", "BookingMovie", new { id = item.Id })" class="btn btn-info @(item.IsApproved ? "disabled" : "")">Approve</a>
            </td>
        </tr>
    }

</table>
